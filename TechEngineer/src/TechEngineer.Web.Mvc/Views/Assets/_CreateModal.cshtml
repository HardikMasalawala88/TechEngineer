@using TechEngineer.Web.Models.Common.Modals
@model TechEngineer.Web.Models.Assets.AssetListViewModel
@{
    Layout = null;
}
<div class="modal fade" id="AssetCreateModal" tabindex="-1" role="dialog" aria-labelledby="AssetCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewAsset")))
            <form name="assetCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="locationId">@L("Location")</label>
                        <div class="col-md-9">
                            <select class="form-control" name="locationId">
                                <option value="SelectLocation">Select Location</option>
                                @foreach (var loc in Model.Locations)
                                {
                                    <option value="@loc.Id">@(string.Concat(loc.Address1, " ", loc.Address2))</option>
                                }
                            </select>
                            <input type="hidden" name="organizationId" />
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="organizationName">@L("Name")</label>
                        <div class="col-md-9">
                            <input id="organizationName" type="text" name="Name" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="category">@L("Category")</label>
                        <div class="col-md-9">
                            <input id="category" type="text" name="Category" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="serialNumber">@L("SerialNumber")</label>
                        <div class="col-md-9">
                            <input id="serialNumber" type="text" name="SerialNumber" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="details">@L("Details")</label>
                        <div class="col-md-9">
                            <input id="details" type="text" name="Details" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="modelNumber">@L("ModelNumber")</label>
                        <div class="col-md-9">
                            <input id="modelNumber" type="text" name="ModelNumber" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="isInWarrenty">@L("IsInWarrenty")</label>
                        <div class="col-md-9">
                            <input id="isInWarrenty" type="checkbox" name="IsInWarrenty" value="true" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="CreateOrgIsActive">@L("IsActive")</label>
                        <div class="col-md-9">
                            <input id="CreateOrgIsActive" type="checkbox" name="IsActive" value="true" checked />
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
