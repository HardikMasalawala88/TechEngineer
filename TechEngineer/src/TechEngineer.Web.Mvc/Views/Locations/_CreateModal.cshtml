@using TechEngineer.Web.Models.Common.Modals
@model TechEngineer.Web.Models.Locations.LocationListViewModel
@{
    Layout = null;
}
<div class="modal fade" id="LocationCreateModal" tabindex="-1" role="dialog" aria-labelledby="LocationCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewLocation")))
            <form name="locationCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" role="tab" href="#create-location-details">@L("LocationDetails")</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-location-details">
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="address1">@L("Address1")</label>
                                <div class="col-md-9">
                                    <input id="address1" type="text" name="Address1" class="form-control" required maxlength="32" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="address2">@L("Address2")</label>
                                <div class="col-md-9">
                                    <input id="address2" type="text" name="Address2" class="form-control" required maxlength="32" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="landMark">@L("Landmark")</label>
                                <div class="col-md-9">
                                    <input id="landMark" type="text" name="Landmark" class="form-control" required maxlength="32" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="postalCode">@L("PostalCode")</label>
                                <div class="col-md-9">
                                    <input id="postalCode" type="text" name="PostalCode" class="form-control" required maxlength="32" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="countryId">@L("CountryId")</label>
                                <div class="col-md-9">
                                    <input id="countryId" type="text" name="CountryId" class="form-control" required maxlength="32" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="stateId">@L("StateId")</label>
                                <div class="col-md-9">
                                    <input id="stateId" type="text" name="StateId" class="form-control" required maxlength="32" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="cityId">@L("CityId")</label>
                                <div class="col-md-9">
                                    <input id="cityId" type="text" name="CityId" class="form-control" required maxlength="32" minlength="2">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
