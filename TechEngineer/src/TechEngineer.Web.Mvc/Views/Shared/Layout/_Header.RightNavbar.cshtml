@using TechEngineer.Web.Views.Shared.Components.SideBarOrganizationDropdown
@using TechEngineer.Web.Views.Shared.Components.RightNavbarLanguageSwitch
@using TechEngineer.Web.Views.Shared.Components.RightNavbarUserArea

<ul class="navbar-nav ml-auto">
    @*Only Superadmin has an access of multiple Organization*@
    @if (User.IsInRole("Superadmin"))
    {
        @await Component.InvokeAsync(typeof(SideBarOrganizationDropdownViewComponent))
    }
    @await Component.InvokeAsync(typeof(RightNavbarLanguageSwitchViewComponent))
    @await Component.InvokeAsync(typeof(RightNavbarUserAreaViewComponent))
</ul>
